{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["configs/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["database/*"],
      "@util/*": ["util/*"]
    }
  }
}
